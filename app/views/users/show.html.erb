<div class="row">
  <div class="large-12 columns">
    <h4>Upload Today's Lecture Pictures</h4>
    <div class="row">
      <%= form_for @picture, html: { multipart: true } do |f| %>
        <div class="small-8 columns">
          <%= f.file_field :uploaded_file %>
        </div>
        <div class=" columns">
          <%= f.submit 'Upload', class: "radius button tiny" %>
        </div>
      <% end %>
    </div>

    <div class="section-container tabs" data-section>
      <section class="section">
        <h5 class="title">Uploaded Pictures</h5>
      </section>
      <section class="section">
        <div class="content" data-slug="panel2">
          <ul class="large-block-grid-3">
            <% @pictures.each do |picture| %>
              <li>
                <div class="show-image">
                  <%= image_tag picture.uploaded_file.url(:medium), class: "image-box" %>
                  <input class="picture-title" value='<%= picture.uploaded_file_file_name %>' />
                  <%= link_to '<i class="fa fa-trash" title="Delete"></i>'.html_safe,
                      picture ,method: :delete, data: { confirm: 'Are you sure?' }, class:"delete", id:"delete-icon" %>
                </div>
                <div class="row">
                  <div class="input-group small-12 columns">
                    <%= text_field_tag picture.uploaded_file.url, "#{picture.uploaded_file.url}",
                        class: "image-title-box", name: "box-content", id: "copy-text#{picture.id}" %>
                    <!-- <span class="input-group-button">
                      <button class="button tiny copybutton" id="clip_button"
                          name="copy" title="Copy to Clipboard"
                          data-clipboard-target='copy-text<%=picture.id%>' data-id='<%=picture.id%>'>
                            <i class="fa fa-clipboard"></i>
                      </button>
                    </span> -->
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </section>
    </div>
  </div>
</div>

